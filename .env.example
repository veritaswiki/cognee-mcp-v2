# Cognee MCP v2.0 环境变量配置模板
# 复制为 .env 文件并填写实际值

# =============================================================================
# 🔗 Cognee API 配置
# =============================================================================

# API服务地址
COGNEE_API_URL=https://mcp-cognee.veritas.wiki
# COGNEE_API_URL=http://localhost:8000  # 开发环境

# API认证 - 方式1: API密钥 (推荐)
COGNEE_API_KEY=your_jwt_token_here
COGNEE_API_KEY_HEADER=Authorization
COGNEE_API_KEY_SCHEME=Bearer

# API认证 - 方式2: 用户凭据 (备选)
COGNEE_API_EMAIL=your_email@example.com
COGNEE_API_PASSWORD=your_password_here

# 请求配置
COGNEE_TIMEOUT=180
COGNEE_MAX_RETRIES=3
COGNEE_RETRY_DELAY=1.0

# =============================================================================
# 🛠️ MCP 服务配置
# =============================================================================

# MCP协议配置
MCP_PROTOCOL_VERSION=2024-11-05
MCP_SERVER_NAME=cognee-mcp-v2
MCP_SERVER_VERSION=2.0.0

# 并发配置
MCP_MAX_CONCURRENT_REQUESTS=10
MCP_REQUEST_TIMEOUT=60.0
MCP_KEEPALIVE_TIMEOUT=30.0

# =============================================================================
# 📊 功能模块配置
# =============================================================================

# 时序感知模块
TEMPORAL_CACHE_SIZE=1000
TEMPORAL_QUERY_LIMIT=500
TEMPORAL_METRICS_INTERVAL=300

# 本体支持模块  
ONTOLOGY_CACHE_SIZE=100
ONTOLOGY_MAX_FILE_SIZE=10485760  # 10MB
ONTOLOGY_SUPPORTED_FORMATS=owl,rdf,ttl,xml

# 异步记忆模块
MEMORY_BATCH_SIZE=100
MEMORY_CONCURRENT_LIMIT=20
MEMORY_CACHE_TTL=3600

# 自我改进模块
FEEDBACK_SENTIMENT_THRESHOLD=0.5
FEEDBACK_QUALITY_THRESHOLD=0.7
FEEDBACK_LEARNING_RATE=0.01

# =============================================================================
# 📈 监控和日志配置
# =============================================================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=structured  # structured, json, simple
LOG_FILE_PATH=logs/cognee_mcp_v2.log
LOG_MAX_FILE_SIZE=100MB
LOG_BACKUP_COUNT=5

# 指标和监控
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=30

# 性能追踪
TRACING_ENABLED=false
TRACING_SAMPLE_RATE=0.1
TRACING_SERVICE_NAME=cognee-mcp-v2

# =============================================================================
# 🔒 安全配置
# =============================================================================

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# 数据安全
ENCRYPT_SENSITIVE_DATA=true
AUDIT_LOG_ENABLED=true
SECURITY_HEADERS_ENABLED=true

# =============================================================================
# 💾 缓存和存储配置
# =============================================================================

# 缓存配置
CACHE_TYPE=memory  # memory, redis, file
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# Redis配置 (如果使用Redis缓存)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TIMEOUT=5.0

# 文件存储
DATA_DIR=./data
TEMP_DIR=./tmp
BACKUP_DIR=./backups

# =============================================================================
# 🧪 开发和调试配置
# =============================================================================

# 开发模式
DEBUG=false
DEV_MODE=false
RELOAD_ON_CHANGE=false

# 调试选项
VERBOSE_ERRORS=false
PROFILE_PERFORMANCE=false
DUMP_REQUESTS=false

# 测试配置
TEST_MODE=false
TEST_DATA_DIR=./tests/data
MOCK_API_RESPONSES=false

# =============================================================================
# 🌐 网络和连接配置
# =============================================================================

# HTTP客户端配置
HTTP_POOL_CONNECTIONS=10
HTTP_POOL_MAXSIZE=20
HTTP_MAX_REDIRECTS=3
HTTP_VERIFY_SSL=true

# 代理配置 (可选)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# =============================================================================
# 📝 其他配置
# =============================================================================

# 区域和本地化
TIMEZONE=UTC
LANGUAGE=zh-CN

# 功能开关
FEATURE_TIME_AWARENESS=true
FEATURE_ONTOLOGY_SUPPORT=true  
FEATURE_ASYNC_MEMORY=true
FEATURE_SELF_IMPROVING=true
FEATURE_ADVANCED_ANALYTICS=true

# 资源限制
MAX_MEMORY_USAGE=512MB
MAX_CPU_USAGE=80%
MAX_DISK_USAGE=1GB